<div class='chat-card'>
	<div>
		<span>
			{{#if roll.isCritical}}
				{{#if (eq roll.result 'criticalSuccess')}}
					{{upper 'Madness.ChatMessage.CriticalHit'}}
					!
				{{else}}
					{{upper 'Madness.ChatMessage.CriticalFailure'}}
					!
				{{/if}}
			{{else}}
				{{#if (eq roll.result 'success')}}
					{{localize 'Madness.ChatMessage.Success'}}
				{{else}}
					{{localize 'Madness.ChatMessage.Failure'}}
				{{/if}}
			{{/if}}
		</span>
	</div>
	<div>{{roll.roll.total}}</div>
</div>